func cutPayload(b []byte, maxSize int) string {
	if len(b) > maxSize {
		return {{goqual "strings.ToValidUTF8"}}(string(b[:maxSize]), "") + "..."
	} else {
		return {{goqual "strings.ToValidUTF8"}}(string(b), "")
	}
}