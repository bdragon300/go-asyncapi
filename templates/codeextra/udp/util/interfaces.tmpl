import (
	"context"
	"io"
	"net"
)

// Pub
type (
	Producer interface {
		Publisher(ctx context.Context, address string, chBindings *ChannelBindings, opBindings *OperationBindings, security {{goQualR "AnySecurityScheme"}}) (Publisher, error)
	}
	Publisher interface {
		Send(ctx context.Context, envelopes ...EnvelopeWriter) error
		Close() error
	}
	EnvelopeWriter interface {
		io.Writer
		ResetPayload()
		SetHeaders(headers {{goQualR "Headers"}})
		SetContentType(contentType string)
		SetBindings(bindings MessageBindings)

		SetRemoteAddr(addr net.Addr)
	}
)

type EnvelopeMarshaler interface {
	MarshalEnvelopeUDP(envelope EnvelopeWriter) error
}

// Sub
type (
	Consumer interface {
		Subscriber(ctx context.Context, address string, chBindings *ChannelBindings, opBindings *OperationBindings, security {{goQualR "AnySecurityScheme"}}) (Subscriber, error)
	}
	Subscriber interface {
		Receive(ctx context.Context, cb func(envelope EnvelopeReader)) error
		Close() error
	}
	EnvelopeReader interface {
		io.Reader
		Headers() {{goQualR "Headers"}}

		RemoteAddr() net.Addr
	}
)

type EnvelopeUnmarshaler interface {
	UnmarshalEnvelopeUDP(envelope EnvelopeReader) error
}
