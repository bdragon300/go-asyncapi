import (
	"context"
)

type SubscribeChannel struct {
	channelBindings   *{{goQualU "http" "ChannelBindings"}}
	operationBindings *{{goQualU "http" "OperationBindings"}}
	security          {{goQualR "AnySecurityScheme"}}
	callbacks         *{{goQualR "Ring"}}[subscriberFunc]
}

func (s *SubscribeChannel) Receive(ctx context.Context, cb func(envelope {{goQualU "http" "EnvelopeReader"}})) error {
	element := s.callbacks.Append(cb)
	defer func() {
		s.callbacks.Remove(element)
	}()

	<-ctx.Done()
	return ctx.Err()
}

func (s *SubscribeChannel) Close() error {
	return nil
}
