func NewEnvelopeOut(buf []byte) *EnvelopeOut {
	req := &http.Request{ // Taken from http.NewRequestWithContext
		Method:     "GET",
		Proto:      "HTTP/1.1",
		ProtoMajor: 1,
		ProtoMinor: 1,
		Header:     make(http.Header),
	}
	return &EnvelopeOut{
		Request: req.WithContext(context.Background()),
		body:    bytes.NewBuffer(buf),
	}
}

