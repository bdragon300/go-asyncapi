{{- /* dot == lang.GoArray */}}

{{define "lang/goarray/definition"}}
    {{- if .Description }}
        {{ print (goIDUpper .) "--" .Description | goComment }}
    {{- end }}
    type {{ . | goIDUpper }} [{{ if .Size }}{{ .Size }}{{ end }}]{{ .ItemsType | goUsage }}
{{- end}}
{{define "lang/goarray/usage"}}
    {{- if .HasDefinition }}
        {{- if .Import }}
            {{- goQual .Import (goIDUpper .) }}
        {{- else }}
            {{- goPkg . }}{{ . | goIDUpper }}
        {{- end }}
    {{- else -}}
        [{{ if .Size }}{{ .Size }}{{ end }}]{{ .ItemsType | goUsage }}
    {{- end }}
{{- end}}