{{- /* dot == lang.GoArray */}}

{{define "code/lang/goarray/definition"}}
    {{- if .Description }}
        {{ print (goID .) "--" .Description | goComment }}
    {{- end }}
    type {{ . | goID }} [{{ with .Size }}{{.}}{{ end }}]{{ .ItemsType | goUsage }}
{{- end}}
{{define "code/lang/goarray/usage"}}
    {{- if .HasDefinition }}
        {{- if .Import }}
            {{- goPkgExt .Import }}{{goID .}}
        {{- else }}
            {{- goPkg . }}{{ . | goID }}
        {{- end }}
    {{- else -}}
        [{{ with .Size }}{{.}}{{ end }}]{{ .ItemsType | goUsage }}
    {{- end }}
{{- end}}