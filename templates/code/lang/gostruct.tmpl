{{- /* dot == lang.GoStruct */}}

{{define "code/lang/gostruct/definition"}}
    {{- if .Description }}
        {{- print (goID .) "--" .Description | goComment }}
    {{- end }}
    type {{ . | goID }} struct {
        {{- range .Fields }}
            {{- if .Description }}
                {{ print .Name "--" .Description | goComment }}
            {{- end }}
            {{ .Name }} {{ .Type | goUsage }} {{.RenderTags}}
        {{- end }}
    }
{{- end}}
{{define "code/lang/gostruct/usage"}}
    {{- if .HasDefinition }}
        {{- if .Import }}
            {{- goPkgExt .Import }}{{goID .}}
        {{- else }}
            {{- goPkg . }}{{ . | goID }}
        {{- end }}
    {{- else -}}
        struct {
            {{- range .Fields }}
                {{- if .Description }}
                    {{ print .Name "--" .Description | goComment }}
                {{- end }}
                {{ .Name }} {{ .Type | goUsage }} {{.RenderTags}}
            {{- end }}
        }
    {{- end }}
{{- end}}