<!DOCTYPE html>
<!-- This file is generated by go-asyncapi tool -->
<html>
  <head>
    <title>{{ .DocumentContents | dig "info" "title" | default .DocumentURL.Location | html }} - AsyncAPI documentation</title>
    {{- range .Resources }}
      {{- if ne .FileExtension ".css"}}{{continue}}{{end}}
      {{- if .Embed }}
          <style>{{ .Content }}</style>
      {{- else }}
          <link rel="stylesheet" href="{{ .Location | html }}">
      {{- end }}
    {{- end }}
  </head>
  <body>

    <div id="asyncapi"></div>

    {{- range .Resources }}
      {{- if ne .FileExtension ".js"}}{{continue}}{{end}}
      {{- if .Embed }}
          <script>{{ .Content }}</script>
      {{- else }}
          <script src="{{ .Location | html }}"></script>
      {{- end }}
    {{- end }}
    <script>
      const schemaContents = "{{ .DocumentContents | toJSON | js }}";
      AsyncApiStandalone.render({
        schema: {{if false }}{
          url: "{{ .DocumentURL.String | js }}",
          options: { method: "GET", mode: "cors" },
        }{{else}}schemaContents{{end}},
        config: {
          show: {
            sidebar: true,
          }
        },
      }, document.getElementById('asyncapi'));
    </script>

  </body>
</html>