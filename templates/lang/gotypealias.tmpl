{{define "definition"}}
    {{- if .Description -}}
        {{ print (.Name "--" .Description) | gocomment }}
    {{- end -}}
    type {{ .Name | goid }} {{.AliasedType.D}}
{{end}}
{{define "usage"}}
    {{- if .HasDefinition -}}
        {{- if and .Import (ne .Import .ctx.CurrentPackage) -}}
            {{ qualg .Import .Name }}
        {{- else -}}
            {{ .Name | goid }}
        {{- end -}}
    {{- else -}}
        {{.AliasedType.U}}
    {{- end -}}
{{end}}