{{define "lang/gotypealias/definition"}}
    {{- if .Description }}
        {{ print (goid .) "--" .Description | gocomment }}
    {{- end }}
    type {{ . | goid }} {{ .AliasedType | godef }}
{{- end}}
{{define "lang/gotypealias/usage"}}
    {{- if .HasDefinition }}
        {{- if .Import }}
            {{- goqual .Import (goid .) }}
        {{- else }}
            {{- gopkg . }}{{ . | goid }}
        {{- end }}
    {{- else }}
        {{- .AliasedType | gousage }}
    {{- end }}
{{- end}}