{{define "lang/gomap/definition"}}
    {{- if .Description }}
        {{ print (goid .) "--" .Description | gocomment }}
    {{- end }}
    type {{ . | goid }} map[{{ .KeyType | gousage }}]{{ .ValueType | gousage }}
{{- end}}
{{define "lang/gomap/usage"}}
    {{- if .HasDefinition }}
        {{if .Import }}
            {{ goqual .Import (goid .) }}
        {{- else }}
            {{ gopkg . }}{{ . | goid }}
        {{- end }}
    {{- else -}}
        map[{{ .KeyType | gousage }}]{{ .ValueType | gousage }}
    {{- end }}
{{- end}}