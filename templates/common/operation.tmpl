    func (o {{ $.Type | gousage }}) OpenEnvelope{{. | goid}}(
        envelope {{goqualrun $.Protocol "EnvelopeReader"}},
        message {{ $ | goid }}OperationEnvelopeUnmarshaler{{$.Protocol | goid}},
    ) error {
        return message.UnmarshalOperation{{$ | goid}}{{$.Protocol | goid}}(envelope)
